<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.jdrd.robot">

    <!-- 权限管理 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sjx_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity
            android:name=".activity.LaunchActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity">

            <!-- android:configChanges="orientation|keyboardHidden" -->
            <!-- android:screenOrientation="portrait" -->
            <!-- &gt; -->
        </activity>
        <!-- 设置指令 -->
        <activity
            android:name=".activity.DeskConfigPathActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
        <!-- 机器人编辑页面 -->
        <activity
            android:name=".activity.RobotConfigActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
        <!-- 机器人状态 -->
        <activity
            android:name=".activity.RobotActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
        <!-- 编辑命令 -->
        <activity
            android:name=".activity.CommandActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
        <!-- 系统卡列表 -->
        <activity
            android:name=".activity.CardConfig"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
        <!-- 系统卡编辑页面 -->
        <activity
            android:name=".activity.CardConfigActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
        <!-- 系统卡列表 -->
        <activity
            android:name=".activity.AreaConfig"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />

        <!-- 静态IP服务 -->
        <service
            android:name=".service.SetStaticIPService"
            android:enabled="true"
            android:exported="true" />
        <!-- 服务端服务 -->
        <service
            android:name=".service.ServerSocketUtil"
            android:enabled="true"
            android:exported="true" />
        <!-- 客户端服务 -->
        <service
            android:name=".service.ClientSocketUtil"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>